# ─── SignalForge Environment Variables ─────────────────────────
# Copy to .env and fill in values. All keys are optional for dev.

# ─── Database ──────────────────────────────────────────────────
# Defaults to SQLite if not set. Use PostgreSQL for production.
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/signalforge
DATABASE_URL=sqlite+aiosqlite:///./signalforge.db
# Set false in production after running Alembic migrations.
AUTO_CREATE_SCHEMA=true
# Optional for container startup: when true, runs `alembic upgrade head` before API boot.
RUN_DB_MIGRATIONS=false

# ─── Supabase Auth ─────────────────────────────────────────────
# Required for production auth. Sign up at https://supabase.com
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# ─── Notifications: Email (Resend) ────────────────────────────
# Sign up at https://resend.com
RESEND_API_KEY=
NOTIFICATION_FROM_EMAIL=alerts@signalforge.io

# ─── Notifications: Slack ──────────────────────────────────────
# Create an Incoming Webhook at https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# ─── Data Source API Keys ──────────────────────────────────────
# All optional — demo data is used when not set.
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
NEWSAPI_KEY=
ZENDESK_SUBDOMAIN=
ZENDESK_EMAIL=
ZENDESK_API_KEY=
STRIPE_API_KEY=
PAGERDUTY_API_KEY=
ALPHA_VANTAGE_KEY=

# ─── LLM (AI Chat) ────────────────────────────────────────────
OPENAI_API_KEY=
LLM_MODEL=gpt-4o-mini

# ─── Server ────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
APP_ENV=development
# When true, production-critical misconfigurations fail fast on startup.
STRICT_STARTUP_VALIDATION=false
CORS_ORIGINS=["http://localhost:3000"]

# ─── Risk Scoring Weights ─────────────────────────────────────
RISK_WEIGHT_SENTIMENT=0.25
RISK_WEIGHT_ANOMALY=0.25
RISK_WEIGHT_TICKET_VOLUME=0.20
RISK_WEIGHT_REVENUE=0.15
RISK_WEIGHT_ENGAGEMENT=0.15

# ─── Ingestion ─────────────────────────────────────────────────
INGESTION_INTERVAL_SECONDS=300
# Wrap values containing spaces in double quotes.
NEWSAPI_KEYWORDS="cybersecurity,outage,data breach"

# ─── Demo Data ─────────────────────────────────────────────────
# Set to false in production to disable synthetic/demo signal generation.
ENABLE_DEMO_DATA=true
