# SignalForge Environment Configuration

# Database (SQLite for dev, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./signalforge.db
# DATABASE_URL=postgresql+asyncpg://signalforge:password@localhost:5432/signalforge

# Authentication
JWT_SECRET=change-me-in-production-signalforge-2024
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# API Keys (optional — demo data used if not set)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
NEWSAPI_KEY=
ZENDESK_SUBDOMAIN=
ZENDESK_EMAIL=
ZENDESK_API_KEY=
STRIPE_API_KEY=
PAGERDUTY_API_KEY=
ALPHA_VANTAGE_KEY=

# LLM Chat (optional — falls back to keyword search)
OPENAI_API_KEY=
LLM_MODEL=gpt-4o-mini
LLM_PROVIDER=openai

# Risk Scoring Weights
RISK_WEIGHT_SENTIMENT=0.25
RISK_WEIGHT_ANOMALY=0.25
RISK_WEIGHT_TICKET_VOLUME=0.20
RISK_WEIGHT_REVENUE=0.15
RISK_WEIGHT_ENGAGEMENT=0.15

# Server
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=["http://localhost:3000"]

# ML Settings
USE_MOCK_ML=true

# Data Management
RETENTION_DAYS=90
FAISS_INDEX_PATH=./faiss_index

# Ingestion Settings
REDDIT_SUBREDDITS=technology,sysadmin,netsec
NEWSAPI_CATEGORIES=technology,business
NEWSAPI_KEYWORDS=cybersecurity,outage,data breach
ZENDESK_TICKET_STATUSES=new,open,pending,hold
STRIPE_EVENT_TYPES=charge.failed,invoice.payment_failed,payout.failed,charge.dispute.created
PAGERDUTY_SERVICE_IDS=
ALPHA_VANTAGE_SYMBOLS=AAPL,MSFT,SPY
INGESTION_INTERVAL_SECONDS=300
